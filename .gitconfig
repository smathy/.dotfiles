[user]
	email = jk@radical.gd
	name = Jason King
[github]
	user = smathy
	ssl = true
[core]
	excludesfile = ~/.gitignore
	editor = nvim
	autocrlf = false
	whitespace = fix
	pager = delta
[color]
	ui = auto
[alias]
	alias = !git config -l | rg ^alias
	amend = commit --amend -a -C HEAD
	br = branch
	cb = co -b
	cc = co -
	ci = commit --allow-empty-message
	co = checkout
	cp = cherry-pick
	d = diff --color-words
	dd = co develop
	down = pull
	l = log --graph --date='format:%Y-%m-%d %H:%M:%S' --pretty='format:%ad %C(yellow)%h%Creset %C(blue)%aN%Creset %s%C(yellow)%d%Creset'
	la = log --decorate --pretty=fuller --stat --abbrev-commit --name-status
	lc = log --no-merges --graph --pretty='format:%h %s'
	ll = log --decorate --pretty=fuller --shortstat --abbrev-commit --dirstat
	lp = log --decorate --pretty=fuller --stat --patch
  m = !git co $([ -f .git/refs/remotes/origin/HEAD ] && awk -F "/" '{print $NF}' .git/refs/remotes/origin/HEAD || echo master)
	mg = merge --no-ff
	mm = "!f() { git merge $@ | egrep --color 'CONFLICT .*|$' ; }; f"
	prr = pull-request
	rba = !git rb --abort
	rbc = !git rb --continue
	rbii = !git rbi 10
  rbm = !git rb $([ -f .git/refs/remotes/origin/HEAD ] && awk -F "/" '{print $NF}' .git/refs/remotes/origin/HEAD || echo master)
	rh = reset --hard
	s = show --color-words
	sign = commit --amend -sC HEAD
	ss = co staging
	st = status -sb
	up = push
	upp = up -f
	wip = ci -amWIP
[push]
	default = current
[diff]
	# renames = copies
  colorMoved = default
[diff "rails_credentials"]
	textconv = rails encrypted:show
	cachetextconv = false
[clean]
	requireForce = false
[branch]
	autosetuprebase = always
	sort = -committerdate
[hub]
	protocol = ssh
[log]
	date = iso-local
[init]
	defaultBranch = master

[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	line-numbers = true
	hyperlinks = true
	syntax-theme = Solarized (dark)
	minus-style = red normal
	plus-style = green normal
[merge]
	conflictstyle = diff3
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[rerere]
	enabled = true
