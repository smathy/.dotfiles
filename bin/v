#!/bin/bash
vim=neovide
pipe=./.nvim.pipe
line=""
args=("$@")
re=':[0-9]+$'
if [[ ${#args[@]} == 1 && ${args[0]} =~ $re ]]; then
  pos=$(expr index "${args[0]}" ":")
  line="+${args[0]:$pos}"
  args=("${args[0]:0:$pos-1}")
fi

if [[ "$#" -eq 0 ]]; then
	$vim
elif [[ "${args[0]}" == "-" ]]; then
  nvim -
else
	if [[ -S $pipe ]]; then
		for arg in "${args[@]}"; do
			nvim --server $pipe --remote-send ":vs $line $arg<CR>"
		done
		osascript >/dev/null <<- EOI
			tell application "System Events" to tell process "neovide"
				set frontmost to true
				windows where title contains "${PWD/$HOME/~}"
				if result is not {} then perform action "AXRaise" of item 1 of result
			end tell
		EOI
	else
		$vim $line "${args[0]}" -- --listen $pipe
		sleep 0.1
		for arg in "${args[@]:1}"; do
			nvim --server $pipe --remote-send ":vs $line $arg<CR>"
		done
	fi
fi
