#!/usr/bin/env zsh
vim=neovide
pipe=./.nvim.pipe
args=$@

line_file() {
  local re=':[0-9]+$'
  local arg=$1
  if [[ $arg =~ $re ]]; then
    local pos=${arg[(I)[:]]}
    local line="+${arg:$pos}"
    arg="$line ${arg:0:$(($pos-1))}"
  fi
  echo $arg
}

send_alls() {
  for arg in $@; do
    nvim --server $pipe --remote-send ":vs $(line_file $arg)<CR>"
  done
}

if [[ "$#" -eq 0 ]]; then
  $vim
elif [[ "${args[1]}" == "-" ]]; then
  nvim '+set buftype=nofile' -
else
  if [[ ! -S $pipe ]]; then
    $vim $(line_file $args[1]) -- --listen $pipe
    shift args
    sleep 0.1
  fi

  send_alls $args
  osascript -e 'tell application "neovide" to activate'
fi

# vim: set ft=zsh
